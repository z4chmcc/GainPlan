        System.out.print("Enter the time duration of yout workout: [30min] [60min] [90min]:   ");
        String time = input.next();
        
        
        
        switch(type){
            case "Bulk":
                bodyType1();
            break;
                
            case "Ripped":
                bodyType2();
            break;    
                
            case "Weight loose":
                bodyType3();
            break;
            
